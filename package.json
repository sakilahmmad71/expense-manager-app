{
	"name": "expense-manager-app",
	"version": "1.0.0",
	"description": "A modern, fully responsive expense tracking application built with React, TypeScript, and TailwindCSS",
	"type": "module",
	"keywords": [
		"expense-tracker",
		"budget-manager",
		"finance-app",
		"react",
		"typescript",
		"tailwindcss",
		"vite",
		"shadcn-ui"
	],
	"author": {
		"name": "Shakil Ahmed",
		"email": "sakilahmmad71@gmail.com",
		"url": "https://github.com/sakilahmmad71"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sakilahmmad71/expense-manager-app.git"
	},
