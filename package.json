		"husky": "^9.1.7",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"tailwindcss": "^3.4.17",
		"terser": "^5.44.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"vite": "^6.0.3"
	}
